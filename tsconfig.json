{
  "compilerOptions": {
    "jsx": "react",   
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*", 
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules", 
    "dist" 
  ]
}
